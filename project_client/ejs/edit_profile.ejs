<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/edit-profile.css">
</head>
<body>
    <div id="main">
        <div id="top-bar">
            <div id="heading">
                Data<span>Nest</span>
            </div>

            <div id="user">
                <div class="user-avatar" id="user-toggle">
                    <%= username.charAt(0).toUpperCase() %>
                </div>

                <div id="user-name">
                    <%= username.charAt(0).toUpperCase() + username.slice(1) %>
                </div>

                <!-- Dropdown -->
                <div id="user-dropdown" class="hidden">
                    <div class="dropdown-item">üñ•Ô∏è <a href="/startpage">Workspace</a></div>
                    <div class="dropdown-item logout">üö™ <a href="/login">Logout</a></div> 
                    <!-- //employ the cache deleting logic again -->
                </div>
            </div>
            <script>
                const userToggle = document.getElementById("user-toggle");
                const dropdown = document.getElementById("user-dropdown");

                userToggle.addEventListener("click", (e) => {
                    e.stopPropagation();
                    dropdown.classList.toggle("hidden");
                });

                // Close on outside click
                document.addEventListener("click", () => {
                    dropdown.classList.add("hidden");
                });
            </script>

        </div>
        <div class="profile-page">
            <div class="profile-card">
                <div class="profile-header">
                    <div class="avatar">
                        <%= firstname[0].toUpperCase() %><%= lastname[0].toUpperCase() %>
                    </div>
                    <div class="profile-info">
                        <h2><%= firstname %> <%= lastname %></h2>
                        <p class="username">@<%= username %></p>
                    </div>
                </div>

                <div class="profile-section">
                    <form action='/edit_profile' id="edit_profile" method='POST'>
                        <input type="hidden" name="oldusername" value="<%= username %>">
                        <input type="hidden" name="password" value="<%= password%>">
                        <div class="profile-edit-row">
                            <span class="label">First Name</span>
                            <input type='text' class='profile-input' name='firstname' value='<%= firstname %>'>
                        </div>

                        <div class="profile-edit-row">
                            <span class="label">Last Name</span>
                            <input type='text' class='profile-input' name='lastname' value='<%= lastname %>'>
                        </div>

                        <div class="profile-edit-row">
                            <span class="label">Username</span>
                            <input type='text' class='profile-input' name='username' value='<%= username %>'>
                        </div>
                    </form>
                </div>

                <div class="profile-actions">
                    <button class="btn secondary" type="submit" form="edit_profile" name="submit" value="cancel">Cancel</button>
                    <button class="btn submit" type="submit" form="edit_profile" name="submit" value="change">Change</button>
                </div>
            </div>

        </div>
    </div>
    
</body>
</html>