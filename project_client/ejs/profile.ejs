<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/profile.css">
</head>
<body>
    <div id="main">
        <div id="top-bar">
            <div id="heading">
                <a href="/">Data<span>Nest</span></a>
            </div>

            <div id="user">
                <div class="user-avatar" id="user-toggle">
                    <%= username.charAt(0).toUpperCase() %>
                </div>

                <div id="user-name">
                    <%= username.charAt(0).toUpperCase() + username.slice(1) %>
                </div>

                <!-- Dropdown -->
                <div id="user-dropdown" class="hidden">
                    <div class="dropdown-item">üñ•Ô∏è <a href="/startpage">Workspace</a></div>
                    <div class="dropdown-item logout">üö™ <a href="/login">Logout</a></div> 
                    <!-- //employ the cache deleting logic again -->
                </div>
            </div>
            <script>
                const userToggle = document.getElementById("user-toggle");
                const dropdown = document.getElementById("user-dropdown");

                userToggle.addEventListener("click", (e) => {
                    e.stopPropagation();
                    dropdown.classList.toggle("hidden");
                });

                // Close on outside click
                document.addEventListener("click", () => {
                    dropdown.classList.add("hidden");
                });
            </script>

        </div>
        <div class="profile-page">
            <div class="profile-card">
                <div class="profile-header">
                    <div class="avatar">
                        <%= firstName[0].toUpperCase() %><%= lastName[0].toUpperCase() %>
                    </div>
                    <div class="profile-info">
                        <h2><%= firstName %> <%= lastName %></h2>
                        <p class="username">@<%= username %></p>
                    </div>
                </div>

                <div class="profile-section">
                    <div class="profile-row">
                        <span class="label">First Name</span>
                        <span class="value"><%= firstName %></span>
                    </div>

                    <div class="profile-row">
                        <span class="label">Last Name</span>
                        <span class="value"><%= lastName %></span>
                    </div>

                    <div class="profile-row">
                        <span class="label">Username</span>
                        <span class="value"><%= username %></span>
                    </div>

                    <div class="profile-row">
                        <span class="label">Last Login</span>
                        <span class="value"><%= lastLoggedIn %></span>
                    </div>

                    <div class="profile-row">
                        <span class="label">Credits</span>
                        <span class="value">ü™π <%= credits%> Credits</span>
                    </div>
                </div>

                <div class="profile-actions">
                    <form action="/change_profile" method="POST" id="change_profile">
                        <input type="hidden" name="firstname" value="<%= firstName %>">
                        <input type="hidden" name="lastname" value="<%= lastName %>">
                        <input type="hidden" name="username" value="<%= username %>">
                        <input type="hidden" name="password" value="<%= password %>">
                        <button class="btn secondary"  name="submit" value="change_password">Change Password</button>
                        <button class="btn secondary" type="submit" name="submit" value="edit_profile">Edit Profile</button>
                        <button class="btn danger"type="submit" name="submit" value="delete_account">Delete Account</button>
                    </form>
                    <button class="btn danger" form="change_profile" type="submit" name="submit" value="logout">Logout</button>
                </div>
            </div>

        </div>
    </div>
    <script>
        function edit_profile(){
            let card = document.querySelector('.profile-section');
            let buttons = document.querySelector('.profile-actions');
            card.innerHTML = `
                <form action='/edit_profile' method='POST'>
                <div class="profile-edit-row">
                    <span class="label">First Name</span>
                    <input type='text' class='profile-input' name='firstname' value='<%= firstName %>'>
                </div>

                <div class="profile-edit-row">
                    <span class="label">Last Name</span>
                    <input type='text' class='profile-input' name='lastname' value='<%= lastName %>'>
                </div>

                <div class="profile-edit-row">
                    <span class="label">Username</span>
                    <input type='text' class='profile-input' name='username' value='<%= username %>'>
                </div>
                </form>
            `;

            document.querySelector('.profile-card').style.width='25vw';
            
            buttons.querySelector('button a').textContent='Change';
        }
    </script>
</body>
</html>